{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "outDir": "./build",
    "rootDir": "./src",
    "moduleResolution": "node",
    "target": "ES2022",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/cubic/components/*"],
      "@layout/*": ["src/cubic/layout/*"],
      "@assets/*": ["src/assets/*"],
      "@stores/*": ["src/cubic/stores/*"],
      "@css/*": ["src/css/*"],
      "@views/*": ["src/cubic/views/*"]
    },
    "allowJs": true,
    "checkJs": true,
    "isolatedModules": true,
    "moduleDetection": "force"
  },
  "include": ["src/**/*.ts", "src/**/*.js", "src/**/*.svelte"]
}
